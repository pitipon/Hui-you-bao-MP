<!-- Have image: {{haveImage}}
Image src: {{imageSrc}} -->
<view class ="upload-bg">
      <view class='first-container'>
            <view class="box-price">
            价格(元):
            <input class="price-input"  placeholder="元" type="number" placeholder-class='price-placeholder' maxlength='5' />
      </view>

      <view class="box-discount">
            浙扣(浙):
            <input class="price-input"  placeholder="浙" type="number" placeholder-class='price-placeholder' maxlength='6' />
      </view>

      </view>
      
     
          <view class="box-message">
            <input class="message-input"  placeholder="message" placeholder-class="message-placeholder" type="text" maxlength='28'/>
      </view>
    
          <view class="box-message">
            <input class="location-input"  placeholder="location" placeholder-class="location-placeholder" type="text" maxlength='28'/>
      </view>
      

    

      <!-- <view class="category-title">Category:</view> -->

      <view class="box-category">
        <picker value="{{value}}" range="{{categories}}" bindchange="bindPickerChange" class="box-picker">
          <view class='picker'>
            Category: {{categories[index]}}
          </view>
        </picker>
      </view>

            <view class="box-onlyme">
                <switch bindchange="switch1Change"/>
            </view> 

            <view class="switch_to_the_right_for_only"> 
              Only me?
            </view>
            <view style="clear: both;"></view>

