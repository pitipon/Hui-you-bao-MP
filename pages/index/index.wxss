.avatar {
  width: 40px;
  height: 40px;
  border-radius: 50%;
  margin-left: 5px;
  margin-top: 5px;
}

.discount-avatar {
  width: 50px;
  height: 50px;
  border-radius: 50%;
   text-align: center; 
}

.card {
  margin: 20px;
  box-shadow: 0 0 10px rgba(0, 0, 0, 0.2)
}

.flex-wrp {
  display: flex;
  flex-direction: column;
}

.flex-item-head {
  flex: 0 0 60px;
  
}

.flex-item-pic {
  flex: 0 0 250px;
  background-size: cover;
  background-position: center center;
}

.flex-item-msg {
  flex: 0 0 30px;
  font-size: 14px;
  text-align: center;
}

.flex-item-bottom {
  flex: 0 0 30px;
}

.card-head {
  display: flex;
  align-items: center;
  justify-content: flex-start;
  padding: 5px;
}

.flex-for-name-time {
  display: flex;
  flex-direction: column;
  padding: 0px 5px;
}

.name-font-head {
  font-size: 16px;
}

.detail-font-head {
  font-size: 10px;
  color: #888888;
}

.card-head-between-name-discount {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0px 5px;
}

.flex-item-name {
  flex: 0 0 auto;
}

.card-head-right {
  flex: 1 0 auto;
}

.discount-text {
  color: black;
  font-size: 16px;
   padding-top: 12px; 
}

.flex-item-bottom {
  display: flex;
  align-items: center;
  justify-content: space-around;
}

.flex-bottom-item {
  color: #333333;
  font-size: 12px;
}

/* FOR LOADING CARDS  */


.FB-Loading-Card{
  background-color: rgb(255, 255, 255);
  border-radius: 3px;
  border-bottom: rgb(208, 209, 213) solid 1px;
  border-left: rgb(223, 224, 228) solid 1px;
  border-right-color: rgb(223, 224, 228) solid 1px;
  border-top-color: rgb(229, 230, 233) solid 1px;
  display: block;
   height: 300px;
  /* width: 494px;  */
  padding: 12px;
}
.FB-Loading-FirstBox{
  width:100%;
  height:30px;
}
.FB-Loading-FirstBox-Img{
  position:relative;
  left:0;
  background-color: #CCC;
  height: 40px;
  width: 40px;
  animation-name: shine; 
  animation-duration: 2s; 
  animation-iteration-count: infinite;
  animation-timing-function: linear;
}
.FB-Loading-FirstBox-1stRow, .FB-Loading-FirstBox-2ndRow, .FB-Loading-FirstBox-3rdRow, .FB-Loading-FirstBox-4thRow, .FB-Loading-FirstBox-5thRow{
  position:relative;
  background-color: #CCC;
  height: 6px;
  animation-name: shine; 
  animation-duration: 2s; 
  animation-iteration-count: infinite;
  animation-timing-function: linear;
}
@keyframes shine {
    from {transition:none;}
    to {background-color:#f6f7f8;transition: all 0.3s ease-out;}
}
.FB-Loading-FirstBox-1stRow{
  left:50px;
  top:-33px;
  width: 25%;
}
.FB-Loading-FirstBox-2ndRow{
  left:50px;
  top:-20px;
  width: 15%;
}
.FB-Loading-FirstBox-3rdRow{
  left:0px;
  top:30px;
  width: 80%;
}
.FB-Loading-FirstBox-4thRow{
  left:0px;
  top:45px;
  width: 90%;
}
.FB-Loading-FirstBox-5thRow{
  left:0px;
  top:60px;
  width: 50%;
}

.pull-down-center {
  text-align: center;
}

.pull-avatar {
  width: 80px;
